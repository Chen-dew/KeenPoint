# 环境变量配置文件

# 应用基础配置
APP_NAME=Academic Paper Assistant
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API 配置
API_PREFIX=/api/v1

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,doc,docx

# 文件存储配置
STATIC_DIR=static
OUTPUT_DIR=outputs
TEMP_DIR=temp

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# NLP 配置
NLP_MODEL=default
MAX_TEXT_LENGTH=1000000

# PPT 生成配置
PPT_DEFAULT_TEMPLATE=default
PPT_MAX_SLIDES=50

# 图像处理配置
IMAGE_MAX_SIZE=1920,1080
IMAGE_QUALITY=85

# MinerU API 配置
MINERU_API=https://mineru.net/api/v4/extract/task
MINERU_TOKEN=your_mineru_token_here

# 数据库配置 (可选)
# DATABASE_URL=sqlite:///./database.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis 配置 (可选)
# REDIS_URL=redis://localhost:6379/0
